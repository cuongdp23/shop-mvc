@model IEnumerable<WebsiteBanHang.Context.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullDes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceDiscount)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avatar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullDes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceDiscount)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDProduct }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IDProduct }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDProduct })
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Thêm sản phẩm", "Create","Product")
    </p>
</div>
