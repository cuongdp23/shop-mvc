@model IEnumerable<WebsiteBanHang.Context.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="padding-bottom-sm">

    <header class="section-heading heading-line">
        <h4 class="title-section text-uppercase">Sản phẩm</h4>
    </header>
    <div class="row row-sm">
        @foreach (var product in Model)
        {
            <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                <div class="card card-sm card-product-grid">
                    <div class="card">
                        <img src="~/Content/images/items/2.jpg" alt="@product.Name" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">$@product.Price</p>
                            <a href="@Url.Action("AddToCart", "Cart", new { productId = product.IDProduct })" class="btn btn-primary">Mua</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</section>
